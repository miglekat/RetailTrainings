
 <div class="mainCont">
<table>
  <thead>
    <tr><br>
      <th>Store name</th>  
    <th>Store Adress </th>
      <th>Training Room </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody> 
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.Store_Name %></td>
        <td><%= training.Store_Adress %></td>
        <td><%= training.Training_Room %></td>
        <td><%= link_to 'Show', training %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_training_path(training) %></td>
        <td><%= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
 <br>
 <footer>
 <% if user_signed_in? %>   
<%= link_to 'New Retail Store', new_training_path, :class =>"button", :role=>"button" %>
<% end %>
  </footer>
<br>


